# SkyAid Image Analytics Server Configuration
# Copy this file to .env and update with your values

# ==============================================
# CLOUDINARY CONFIGURATION (Required)
# ==============================================
# Get your credentials from https://cloudinary.com/console
CLOUD_NAME=your-cloud-name
CLOUD_API_KEY=your-api-key
CLOUD_API_SECRET=your-api-secret

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Server host and port
HOST=0.0.0.0
PORT=8001

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
# YOLO model path (relative to project root)
YOLO_MODEL_PATH=analytics-image-server/best.pt

# Detection confidence threshold (0.0-1.0)
CONFIDENCE_THRESHOLD=0.5

# IoU threshold for NMS (0.0-1.0)
IOU_THRESHOLD=0.45

# ==============================================
# PROCESSING CONFIGURATION
# ==============================================
# Maximum image size (pixels)
MAX_IMAGE_SIZE=1920

# Enable GPU processing (if available)
ENABLE_GPU=true

# Batch processing size
BATCH_SIZE=1

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# ==============================================
# CLOUD STORAGE CONFIGURATION
# ==============================================
# Cloudinary folder for processed images
CLOUDINARY_FOLDER=processed_images

# Image quality (1-100)
IMAGE_QUALITY=90

# Image format (jpg, png, webp)
IMAGE_FORMAT=jpg