# SkyAid Record System Configuration
# Copy this file to .env and update with your values

# ==============================================
# CLOUDINARY CONFIGURATION (Required)
# ==============================================
# Get your credentials from https://cloudinary.com/console
CLOUD_NAME=your-cloud-name
CLOUD_API_KEY=your-api-key
CLOUD_API_SECRET=your-api-secret

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Server host and port
HOST=0.0.0.0
PORT=8003

# ==============================================
# HARDWARE CONFIGURATION
# ==============================================
# GPIO pin for record button (BCM numbering)
RECORD_BUTTON_PIN=17

# GPIO pin for LED indicator
LED_PIN=18

# Enable GPIO hardware (set to false for testing without hardware)
ENABLE_GPIO=true

# ==============================================
# AUDIO RECORDING CONFIGURATION
# ==============================================
# Audio device index (use -1 for default)
AUDIO_DEVICE_INDEX=-1

# Audio sample rate (Hz)
SAMPLE_RATE=44100

# Audio channels (1 for mono, 2 for stereo)
CHANNELS=2

# Audio format (wav, mp3, flac)
AUDIO_FORMAT=wav

# Recording chunk size
CHUNK_SIZE=1024

# ==============================================
# RECORDING SETTINGS
# ==============================================
# Maximum recording duration (seconds)
MAX_RECORDING_DURATION=300

# Minimum recording duration (seconds)
MIN_RECORDING_DURATION=1

# Pre-recording buffer (seconds)
PRE_RECORD_BUFFER=2

# Post-recording buffer (seconds)
POST_RECORD_BUFFER=1

# ==============================================
# STORAGE CONFIGURATION
# ==============================================
# Local storage directory for temporary files
LOCAL_STORAGE_DIR=temp_audio

# Cloudinary folder for recorded audio
CLOUDINARY_FOLDER=recordings

# Audio quality/bitrate
AUDIO_BITRATE=192k

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Maximum concurrent recordings
MAX_CONCURRENT_RECORDINGS=1

# Recording timeout (seconds)
RECORDING_TIMEOUT=360

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================
# WebSocket URL for notifications
WEBSOCKET_URL=ws://localhost:5000/voice

# Enable real-time notifications
ENABLE_NOTIFICATIONS=true

# ==============================================
# CLEANUP CONFIGURATION
# ==============================================
# Auto cleanup temporary files (true/false)
AUTO_CLEANUP=true

# Cleanup interval (seconds)
CLEANUP_INTERVAL=3600

# Maximum temp file age (seconds)
MAX_TEMP_FILE_AGE=86400