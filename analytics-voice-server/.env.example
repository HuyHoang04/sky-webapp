# SkyAid Voice Analytics Server Configuration
# Copy this file to .env and update with your values

# ==============================================
# CLOUDINARY CONFIGURATION (Required)
# ==============================================
# Get your credentials from https://cloudinary.com/console
CLOUD_NAME=your-cloud-name
CLOUD_API_KEY=your-api-key
CLOUD_API_SECRET=your-api-secret

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Server host and port
HOST=0.0.0.0
PORT=8002

# ==============================================
# AI MODEL CONFIGURATION
# ==============================================
# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL_SIZE=base

# Phi-3 model path (if using local Phi-3)
PHI3_MODEL_PATH=models/phi-3

# Use Phi-3 for text analysis (true/false)
USE_PHI3_ANALYSIS=true

# ==============================================
# AUDIO PROCESSING CONFIGURATION
# ==============================================
# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio channels (1 for mono, 2 for stereo)
AUDIO_CHANNELS=1

# Audio format (wav, mp3, flac)
AUDIO_FORMAT=wav

# Maximum audio duration (seconds)
MAX_AUDIO_DURATION=60

# ==============================================
# LANGUAGE CONFIGURATION
# ==============================================
# Default language for transcription
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ja,zh

# ==============================================
# PROCESSING CONFIGURATION
# ==============================================
# Enable GPU processing (if available)
ENABLE_GPU=true

# Batch processing size
BATCH_SIZE=1

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout (seconds)
REQUEST_TIMEOUT=120

# ==============================================
# CLOUD STORAGE CONFIGURATION
# ==============================================
# Cloudinary folder for processed audio
CLOUDINARY_FOLDER=processed_audio

# Audio quality/bitrate
AUDIO_BITRATE=128k

# ==============================================
# ANALYSIS CONFIGURATION
# ==============================================
# Enable sentiment analysis
ENABLE_SENTIMENT_ANALYSIS=true

# Enable keyword extraction
ENABLE_KEYWORD_EXTRACTION=true

# Custom keywords for detection (comma-separated)
CUSTOM_KEYWORDS=emergency,help,danger,alert